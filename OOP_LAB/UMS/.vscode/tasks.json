{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and run Ums",
      "type": "shell",
      "command": "D:/MSYS2/ucrt64/bin/g++.exe",
      "args": [
        "-g",
        "-Iinclude",
        "main.cpp",
        "src/Person.cpp",
        "src/Student.cpp",
        "src/Teacher.cpp",
        "-o",
        "bin/ums.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "run Ums",
      "type": "shell",
      "dependsOn": "build and run Ums",
      "command": "${workspaceFolder}/bin/ums.exe",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
