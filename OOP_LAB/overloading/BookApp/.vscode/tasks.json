{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and run BookApp",
      "type": "shell",
      "command": "D:/MSYS2/ucrt64/bin/g++.exe",
      "args": [
        "-g",
        "-Iinclude",
        "main.cpp",
        "src/Book.cpp",
        "-o",
        "bin/bookapp.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },

    {
      "label": "run BookApp",
      "type": "shell",
      "dependsOn": "build and run BookApp",
      "command": "${workspaceFolder}/bin/bookapp.exe",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
