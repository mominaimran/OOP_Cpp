{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build Vehicle and Airplane",
      "type": "shell",
      "command": "D:/MSYS2/ucrt64/bin/g++.exe",
      "args": [
        "-g",
        "-Iinclude",
        "main.cpp",
        "src/Vehicle.cpp",
        "src/Airplane.cpp",   // ðŸ‘ˆ added this
        "-o",
        "bin/vehicle.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "run Vehicle",
      "type": "shell",
      "dependsOn": "build Vehicle and Airplane",
      "command": "${workspaceFolder}/bin/vehicle.exe",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
