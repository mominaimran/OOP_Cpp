{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and run BankApp",
      "type": "shell",
      "command": "D:/MSYS2/ucrt64/bin/g++.exe",
      "args": [
        "-g",
        "-Iinclude",
        "main.cpp",
        "src/BankAccount.cpp",
        "-o",
        "bin/bankapp.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "run BankApp",
      "type": "shell",
      "dependsOn": "build and run BankApp",
      "command": "${workspaceFolder}/bin/bankapp.exe",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}


// Concept yaad rakho:
// =>tasks.json = build/run automation.
// =>launch.json = debugging setup.
// =>Ctrl+Shift+B = build/run ke liye shortcut.
// =>F5 = debugging ke liye shortcut.